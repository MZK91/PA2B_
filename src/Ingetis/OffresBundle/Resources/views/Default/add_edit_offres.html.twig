{% extends 'IngetisSiteBundle::admin_content.html.twig' %}
{% block titreSection %}Offres{% endblock %}
{% block titrePage %}Ajout d'une Offre{% endblock %}
{% block Section %}Offres{% endblock %}
{% block SousSection %}Offres{% endblock %}
{% block content %}
<form action="{% if id == 0 %}{{ path('ingetis_add_offres') }}{% else %}{{ path('ingetis_edit_offres', {id:id}) }}{% endif %}" method="post" role="form">
  <div class="form-group">
    <label for="Titre">{{ form_label(form.titreOffre) }}</label>
    {{ form_widget(form.titreOffre, {'id':'titre','attr': {'class':'form-control'} }) }}
  </div>
  <div class="form-group">
    <label for="Texte">{{ form_label(form.descriptionOffre) }}</label>
    {{ form_widget(form.descriptionOffre, {'id':'textefrezferz','attr': {'class':'form-control','rows':'6'} }) }}
  </div>
  <input type="submit" class="btn btn-default" value="Envoyer"/>
{{ form_end(form) }}
{% endblock %}
{% block javascript %}
<script type="text/javascript">
tinymce.init({
    selector: "textarea#texte",
    theme: "modern",
  skin: 'light',
  language : 'fr_FR',
  browser_spellcheck : true,
  paste_as_text: true,
  height : 300,
  plugins: ["textcolor fullscreen wordcount spellchecker image link searchreplace code paste"],
  toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
    toolbar2: "fullscreen forecolor backcolor"
});
</script>
{% endblock %}