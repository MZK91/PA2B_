{% extends 'IngetisSiteBundle::admin_content.html.twig' %}
{% block titreSection %}Offres{% endblock %}
{% block titrePage %}Administration des Offres{% endblock %}
{% block Section %}Offres{% endblock %}
{% block SousSection %}Offres{% endblock %}
{% block content %}
<table cellpadding="0" cellspacing="0" border="0" class="display table" id="tableau"> 
    <thead> 
        <tr> 
            <th>id</th> 
            <th>Edit.</th> 
            <th>Sup.</th> 
            <th>Titre</th>
        </tr> 
    </thead> 
    <tbody>
    {% for offre in offres %} 
        <tr class="gradeX"> 
            <td>{{ offre.idOffre }}</td> 
            <td><a href="{{ path('ingetis_edit_offres',{ 'id':offre.idOffre }) }}"><span class="glyphicon glyphicon-pencil"></span></a></td> 
            <td><a href="{{ path('ingetis_del_offres',{'id':offre.idOffre},{'page':page} ) }}"><span class="glyphicon glyphicon-trash"></span></a></td> 
            <td><a href="{{ path('ingetis_offres' , { 'id' : offre.idOffre , 'slug' : 'article' }) }}">{{ offre.titreOffre }}</a></td>
            <td>{{ offre.idOffre }}</td> 
        </tr>
    {% endfor %}
    </tbody>
    <tfoot> 
        <tr> 
            <th>id</th> 
            <th>Edit.</th> 
            <th>Sup.</th>
            <th>Titre</th>
        </tr> 
    </tfoot> 
</table>
{% endblock %}
{% block javascript %}
<script src="{{ asset('js/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('#tableau').dataTable();
} );</script>
{% endblock %}