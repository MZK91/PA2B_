{% extends 'IngetisSiteBundle::admin_content.html.twig' %}
{% block titreSection %}News{% endblock %}
{% block titrePage %}Ajout de News{% endblock %}
{% block Section %}News{% endblock %}
{% block SousSection %}News{% endblock %}
{% block content %}
<form action="{% if id == 0 %}{{ path('ingetis_add_pages') }}{% else %}{{ path('ingetis_edit_pages', {id:id}) }}{% endif %}" method="post" role="form">
  {{ form_widget(form) }}
  <input type="submit" class="btn btn-default" value="Envoyer"/>
{{ form_end(form) }}
{% endblock %}
{% block javascript %}
<script type="text/javascript">
tinymce.init({
    selector: "textarea#texte",
    theme: "modern",
  skin: 'light',
  language : 'fr_FR',
  browser_spellcheck : true,
  paste_as_text: true,
  height : 300,
  plugins: ["textcolor fullscreen wordcount spellchecker image link searchreplace code paste"],
  toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
    toolbar2: "fullscreen forecolor backcolor"
});
</script>
{% endblock %}