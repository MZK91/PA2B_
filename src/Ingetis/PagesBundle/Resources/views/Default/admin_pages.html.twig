{% extends 'IngetisSiteBundle::admin_content.html.twig' %}
{% block titreSection %}Pages{% endblock %}
{% block titrePage %}Administration des pages{% endblock %}
{% block Section %}Pages{% endblock %}
{% block SousSection %}Pages{% endblock %}
{% block content %}
<table cellpadding="0" cellspacing="0" border="0" class="display table" id="tableau"> 
    <thead> 
        <tr> 
            <th>id</th> 
            <th>Edit.</th> 
            <th>Sup.</th> 
            <th>Titre</th>
            <th>Vues</th> 
        </tr> 
    </thead> 
    <tbody>
    {% for page in pages %} 
        <tr class="gradeX"> 
            <td>{{ page.idpage }}</td> 
            <td><a href="{{ path('ingetis_edit_pages',{'id':page.idpage}) }}"><span class="glyphicon glyphicon-pencil"></span></a></td> 
            <td><a href="{{ path('ingetis_del_pages',{'id':page.idpage},{'page':page} ) }}"><span class="glyphicon glyphicon-trash"></span></a></td> 
            <td><a href="{{ path('ingetis_pages' , { 'id' : page.idpage , 'slug' : 'test' }) }}">{{ page.titrePage }}</a></td>
            <td>{{ page.vuesPage }}</td> 
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th>id</th> 
            <th>Edit.</th>
            <th>Sup.</th> 
            <th>Titre</th>
            <th>Vues</th> 
        </tr> 
    </tfoot> 
</table>
{% endblock %}
{% block javascript %}
<script src="{{ asset('js/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('#tableau').dataTable();
} );</script>
{% endblock %}